    <script>
      const slider = document.querySelector(".slider");
      const leftBtn = document.querySelector(".sliderBtnLeft");
      const rightBtn = document.querySelector(".sliderBtnRight");

      const images = [
        "<%= photos[1] %>",
        "<%= photos[2] %>",
        "<%= photos[3] %>",
        "<%= photos[4] %>",
        "<%= photos[0] %>",
      ];

      let id = 0;

      function slide(id) {
        document.querySelector(".fener").src = images[id];
        slider.classList.add("image-fade");
        setTimeout(() => {
          slider.classList.remove("image-fade");
        }, 400);
      }

      leftBtn.addEventListener("click", () => {
        id--;
        if (id < 0) {
          id = images.length - 1;
        }
        slide(id);
      });
      rightBtn.addEventListener("click", () => {
        id++;
        if (id > images.length - 1) {
          id = 0;
        }
        slide(id);
      });
    </script>
    <script src="/index.js"></script>
