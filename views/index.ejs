                    <div class="mainShape17 mainShapes"></div>
                    <div class="mainShape18 mainShapes"></div>
                    <div class="mainShape19 mainShapes"></div>
                    <div class="mainShape20 mainShapes"></div>
                  </div>
                  <div class="cardRow">
                    <div class="windRowBug">
                      <p class="cardRowP1 windCardRowP1">
                        <%= content.current.wind_kph %>
                      </p>
                      <span>km/h</span>
                    </div>
                    <p class="windType"></p>
                  </div>
                </div>
              </div>
              <div class="humidityCard card">
                <h4 class="cardHeader">Humidity</h4>
                <div class="cardPart">
                  <div class="cardImg">
                    <img src="photos/humidity.png" alt="" />
                  </div>
                  <div class="cardRow cardRow2">
                    <p class="cardRowP1 cardRowP2">
                      <%= content.current.humidity %> <span>%</span>
                    </p>
                    <div class="cardRowImg">
                      <img src="photos/smallHumidity.png" alt="" />
                      <p>
                        <span>The dew point is </span>
                        <%= content.forecast.forecastday[0].hour[0].dewpoint_c
                        %> °
                        <span>right now.</span>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="overview2">
              <div class="uvcard card">
                <h4 class="cardHeader">UV Index</h4>
                <div class="cardPart uvCardPart">
                  <div class="uvCard">
                    <div class="uvMain">
                      <div class="mainShape">
                        <hr class="shape" />
                      </div>
                    </div>
                    <div class="cases">
                      <div class="case">
                        <i class="fa-solid fa-circle fa-xs status1"></i>
                        <p>Low</p>
                      </div>
                      <div class="case">
                        <i class="fa-solid fa-circle fa-xs status2"></i>
                        <p>Medium</p>
                      </div>
                      <div class="case">
