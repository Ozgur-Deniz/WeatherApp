                        <i class="fa-solid fa-circle fa-xs status4"></i>
                        <p>Very High</p>
                      </div>
                      <div class="case">
                        <i class="fa-solid fa-circle fa-xs status5"></i>
                        <p>Extremely High</p>
                      </div>
                    </div>
                  </div>
                  <div class="cardRow">
                    <p class="cardRowP1 uvCardRowP1">
                      <%= content.forecast.forecastday[0].day.uv %>
                      <span>UV</span>
                    </p>
                  </div>
                </div>
              </div>
              <div class="visibilityCard card">
                <h4 class="cardHeader">Visibility</h4>
                <div class="cardPart">
                  <div class="cardImg">
                    <img src="photos/visibility.png" alt="" />
                  </div>
                  <div class="cardRow cardRow2">
                    <p class="cardRowP1 cardRowP2">
                      <%= content.forecast.forecastday[0].day.avgvis_km %> km
                    </p>
                    <div class="cardRowImg">
                      <img src="photos/smallvisiblty.png" alt="" />
                      <p class="visiP">
                        <span>Haze is affecting visibility.</span>
